{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
    },
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "vault-{{isotime | clean_ami_name}}"
  }],
  "provisioners": [{
    "type": "file",
    "source": "../scripts/consul.service",
    "destination": "/tmp/consul.service"
  },
  {
    "type": "file",
    "source": "../scripts/000-consul.json",
    "destination": "/tmp/000-consul.json"
  },
  {
    "type": "file",
    "source": "../scripts/vault.service",
    "destination": "/tmp/vault.service"
  },
  {
    "type":"file",
    "source": "../scripts/vault-config.hcl",
    "destination": "/tmp/vault-config.hcl"
  },
  {
    "type": "shell",
    "scripts": ["../scripts/vault-install.sh", "../scripts/consul-install.sh"]
  }
  ]

}
